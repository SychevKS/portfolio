{
    "extends": ["airbnb", "prettier"],
    "rules": {
        "no-use-before-define": [
            "error",
            {
                "functions": false
            }
        ],
        "import/no-unresolved": 0,
        "react/prop-types": 0,
        "react/no-array-index-key": 1,
        "react/jsx-props-no-spreading": "off",
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
    }
}
